                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/textViewOperatorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kamal Silva"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewOperatorStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verified Operator"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/textViewOperatorEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kamal.silva@operator.com"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/textViewVehicleInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle: WP-CM-5847"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/textViewRouteInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Route 245"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#007BFF"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- OPERATOR PROFILE MANAGEMENT Section -->
