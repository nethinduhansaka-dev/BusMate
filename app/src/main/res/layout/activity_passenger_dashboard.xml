<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    tools:context=".PassengerDashboardActivity">

    <!-- App Bar: Customized white app bar embedded directly in the layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarPassengerDashboard"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_gray"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- App name positioned on the left -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BusMate"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-black"
                android:layout_gravity="start|center_vertical" />

            <!-- Action buttons positioned on the right -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="end">

                <ImageButton
                    android:id="@+id/btnSearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_search"
                    android:tint="@android:color/black"
                    android:contentDescription="Search"/>

                <ImageButton
                    android:id="@+id/btnMessage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_chat"
                    android:tint="@android:color/black"
                    android:contentDescription="Messages"/>

                <ImageButton
                    android:id="@+id/btnNotification"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_notification_bell"
                    android:tint="@android:color/black"
                    android:contentDescription="Notifications"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Scroll Content: Configured to work with AppBarLayout using scroll behavior -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingTop="24dp"
            android:paddingEnd="5dp"
            android:paddingBottom="20dp">

            <!-- EEI4369 Lab Session 4: Motion Status Indicators (Accelerometer Integration) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:background="@drawable/motion_status_background"
                android:padding="12dp">

                <TextView
                    android:id="@+id/textViewMotionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“± Motion Status"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:padding="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textViewAccelerometerData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Accelerometer Data"
                    android:textSize="12sp"
                    android:textColor="#8E8E93"
                    android:visibility="gone"
                    android:padding="8dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Enhanced Header Section with Live Updates Indicator -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="@color/background_gray" >

                    <!-- Main greeting and profile section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top">

                        <!-- Left side - Greeting and location -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">



                            <TextView
                                android:id="@+id/textViewGreeting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Good Morning,"
                                android:textSize="16sp"
                                android:textColor="#444444"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="0dp"
                                android:letterSpacing="0.01"
                                android:importantForAccessibility="yes" />

                            <TextView
                                android:id="@+id/textViewPassengerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sarah"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:layout_marginTop="2dp"
                                android:fontFamily="sans-serif-normal"
                                android:importantForAccessibility="yes" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="8dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_location_pin"
                                    android:layout_marginEnd="6dp"
                                    android:contentDescription="Location Icon" />

                                <TextView
                                    android:id="@+id/textViewCurrentLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Negombo, Western Province"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:fontFamily="sans-serif" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Right side - Profile Picture -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="0dp"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/imageViewPassengerPhoto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_avatar"
                                android:scaleType="centerCrop"
                                android:background="#E8E8E8"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:contentDescription="Profile Photo" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Weather section -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:gravity="center_vertical"
                            android:background="@color/background_gray">


                            <!-- Current Weather Info -->
                            <TextView
                                android:id="@+id/textViewCurrentWeather"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28Â°C â€¢ Partly Cloudy"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:layout_marginEnd="8dp"
                                android:fontFamily="sans-serif-medium" />

                            <!-- Optional: Add a small arrow or expand icon -->
                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/ic_arrow_right"
                                android:contentDescription="View Details" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Enhanced Quick Actions Grid with Improved Design -->
            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:columnCount="2"
                app:rowCount="2"
                android:paddingBottom="32dp"
                app:alignmentMode="alignBounds"
                app:useDefaultMargins="true"
                >

                <!-- Find Bus Card (Primary Action) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewFindBus"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    app:layout_columnWeight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp"
                        android:background="@drawable/gradient_primary_black">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_bus_white"
                            android:layout_marginBottom="12dp"
                            android:contentDescription="Find Bus Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Find Bus"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:fontFamily="sans-serif-black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Live Tracking"
                            android:textSize="12sp"
                            android:textColor="#E0E0E0"
                            android:gravity="center"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Buy Ticket Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewBuyTicket"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    app:layout_columnWeight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp"
                        android:background="#F8F9FA">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/bus_ticket2"
                            android:layout_marginBottom="12dp"
                            android:contentDescription="Buy Ticket Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buy Ticket"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:fontFamily="sans-serif-black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quick Booking"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Trip History Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewTripHistory"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    app:layout_columnWeight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F8F9FA"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:paddingTop="2dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginBottom="12dp"
                            android:contentDescription="Trip History Icon"
                            android:src="@drawable/ic_history" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:gravity="center"
                            android:text="Trips"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:text="Past Journeys"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Emergency Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewEmergency"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    app:layout_columnWeight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="24dp"
                        >

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/contacts"
                            android:layout_marginBottom="12dp"
                            android:contentDescription="Emergency Icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Emergency"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:gravity="center"
                            android:fontFamily="sans-serif-black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Safety First"
                            android:textSize="12sp"
                            android:textColor="#FFE0E0"
                            android:gravity="center"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.gridlayout.widget.GridLayout>

            <!-- Enhanced Nearby Buses Section with Real-time Data -->


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="0dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Header with Live Indicator -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/header_background_with_shadow"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/bus_stop"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Nearby Buses Icon" />

                        <TextView
                            android:id="@+id/textViewNearbyBusesTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nearby Buses"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-black" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/live_indicator_background"
                            android:padding="8dp">

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/live_dot_animated"
                                android:layout_marginEnd="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LIVE"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50"
                                android:fontFamily="sans-serif-black" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Bus Cards Container -->
                    <LinearLayout
                        android:id="@+id/layoutNearbyBuses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Bus Card 1: Route 245 - Colombo Express -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewRoute245"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFFFFF"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="20dp"
                                android:background="@drawable/black_border_background">

                                <!-- Route Header -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="12dp">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Route 245 - Colombo Express"
                                            android:textSize="18sp"
                                            android:textStyle="bold"
                                            android:textColor="#000000"
                                            android:fontFamily="sans-serif-black" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Arrives in 5 minutes â€¢ Next: 15 min"
                                            android:textSize="14sp"
                                            android:textColor="#666666"
                                            android:layout_marginTop="4dp"
                                            android:fontFamily="sans-serif-medium" />

                                    </LinearLayout>

                                    <!-- ETA Display -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="5"
                                            android:textSize="32sp"
                                            android:textStyle="bold"
                                            android:textColor="#000000"
                                            android:fontFamily="sans-serif-black" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="min"
                                            android:textSize="12sp"
                                            android:textColor="#666666"
                                            android:fontFamily="sans-serif-medium" />

                                    </LinearLayout>

                                </LinearLayout>

                                <!-- Capacity Section with Enhanced Visual -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_people"
                                        android:layout_marginEnd="8dp"
                                        android:contentDescription="Capacity Icon" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Capacity"
                                        android:textSize="12sp"
                                        android:textColor="#666666"
                                        android:layout_marginEnd="16dp"
                                        android:fontFamily="sans-serif-medium" />

                                    <!-- Enhanced Capacity Progress Bar -->
                                    <ProgressBar
                                        android:layout_width="0dp"
                                        android:layout_height="10dp"
                                        android:layout_weight="1"
                                        android:progress="78"
                                        android:max="100"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:progressDrawable="@drawable/capacity_progress_orange"
                                        android:layout_marginEnd="12dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="78% Full"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="#FF9500"
                                        android:fontFamily="sans-serif-black" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Bus Card 2: Route 187 - Airport Link -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewRoute187"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFFFFF"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="20dp"
                                android:background="@drawable/black_border_background">

                                <!-- Route Header -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_marginBottom="12dp">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Route 187 - Airport Link"
                                            android:textSize="18sp"
                                            android:textStyle="bold"
                                            android:textColor="#000000"
                                            android:fontFamily="sans-serif-black" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Arrives in 12 minutes â€¢ Next: 25 min"
                                            android:textSize="14sp"
                                            android:textColor="#666666"
                                            android:layout_marginTop="4dp"
                                            android:fontFamily="sans-serif-medium" />

                                    </LinearLayout>

                                    <!-- ETA Display -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="12"
                                            android:textSize="32sp"
                                            android:textStyle="bold"
                                            android:textColor="#000000"
                                            android:fontFamily="sans-serif-black" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="min"
                                            android:textSize="12sp"
                                            android:textColor="#666666"
                                            android:fontFamily="sans-serif-medium" />

                                    </LinearLayout>

                                </LinearLayout>

                                <!-- Capacity Section -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_people"
                                        android:layout_marginEnd="8dp"
                                        android:contentDescription="Capacity Icon" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Capacity"
                                        android:textSize="12sp"
                                        android:textColor="#666666"
                                        android:layout_marginEnd="16dp"
                                        android:fontFamily="sans-serif-medium" />

                                    <!-- Capacity Progress Bar -->
                                    <ProgressBar
                                        android:layout_width="0dp"
                                        android:layout_height="10dp"
                                        android:layout_weight="1"
                                        android:progress="45"
                                        android:max="100"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:progressDrawable="@drawable/capacity_progress_green"
                                        android:layout_marginEnd="12dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="45% Full"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="#4CAF50"
                                        android:fontFamily="sans-serif-black" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Enhanced Live Bus Updates Section -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewLiveBusUpdates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"

                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Notification Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_notification_bell"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Notification Icon" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Live Bus Alerts"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="sans-serif-black" />

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/notification_pulse_dot"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Alert Message -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/alert_message_background"
                        android:padding="16dp"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_bus_approaching"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Bus Icon" />

                        <TextView
                            android:id="@+id/textViewBusArrivalNotification"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bus #245 arriving in 5 minutes"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#FF9500"
                            android:fontFamily="sans-serif-black" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_marginStart="8dp"
                            android:contentDescription="Arrow" />

                    </LinearLayout>

                    <!-- Action Button -->
                    <Button
                        android:id="@+id/buttonTrackBus"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Track This Bus"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/btn_track_bus_selector"
                        android:fontFamily="sans-serif-black"
                        android:elevation="0dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Enhanced Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationPassenger"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:elevation="16dp"
        app:menu="@menu/bottom_navigation_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        app:itemActiveIndicatorStyle="@style/App.BottomNavigationView.ActiveIndicator" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
