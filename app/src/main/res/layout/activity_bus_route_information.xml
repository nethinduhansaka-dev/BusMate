<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewRouteNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route Number"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewRouteDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route Description" />

        <TextView
            android:id="@+id/textViewServiceFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Frequency" />

        <TextView
            android:id="@+id/textViewOperatingHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operating Hours" />

        <TextView
            android:id="@+id/textViewTotalDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Distance" />

        <TextView
            android:id="@+id/textViewEstimatedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated Time" />

        <fragment
            android:id="@+id/mapFragmentRoute"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginVertical="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonStartTracking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Tracking" />

            <Button
                android:id="@+id/buttonSetReminder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Set Reminder" />

            <Button
                android:id="@+id/buttonFavoriteRoute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Favorite" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewRouteOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Route Overview" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCapacityMonitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Capacity Monitor" />

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewStops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/layoutScheduleDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
