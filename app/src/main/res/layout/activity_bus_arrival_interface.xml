<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewStopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus Stop Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewStopCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Code"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/layoutArrivingBuses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAllRoutes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonRefreshArrivals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Refresh" />

        <Button
            android:id="@+id/buttonContactDriver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contact Driver" />

        <Button
            android:id="@+id/buttonReportIssue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Report Issue" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewAccessibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <Switch
                android:id="@+id/switchAudioAnnouncements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio" />

            <Switch
                android:id="@+id/switchHighContrast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="High Contrast" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
