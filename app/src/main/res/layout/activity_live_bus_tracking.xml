<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".LiveBusTrackingActivity">

    <!-- Enhanced Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/ic_back_arrow"
            android:fontFamily="sans-serif-black"
            android:layout_marginEnd="16dp" />

        <!-- Title Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Tracking"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/textViewBusRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Route 245 - Colombo Express"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonRefresh"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:textSize="16sp"
                android:background="@drawable/refresh_button_black"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonCenterMap"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/ic_location_accuracy" />

        </LinearLayout>

    </LinearLayout>

    <!-- Enhanced Map Container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88dp"
        android:layout_marginBottom="200dp">

        <!-- Google Map Fragment -->
        <fragment
            android:id="@+id/mapEnhanced"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Map Overlay Information -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/map_overlay_background"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Bus Location Map"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/textViewMapRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Route 245 - Colombo Express"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Emergency Alert Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FF3B30"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:fontFamily="sans-serif-black" />

        </androidx.cardview.widget.CardView>

        <!-- Location Accuracy Indicator -->
        <ImageView
            android:id="@+id/imageViewLocationAccuracy"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_location_high_accuracy"
            android:background="@drawable/location_accuracy_background"
            android:padding="6dp"
            android:elevation="4dp" />

    </RelativeLayout>

    <!-- Enhanced Bottom Information Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/layoutBusInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Bus Information Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <!-- Bus Icon -->
                <ImageView
                    android:id="@+id/imageViewBusIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_bus_filled"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Bus Icon" />

                <!-- Route Information -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Route 245 - Colombo Express"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-black" />

                    <TextView
                        android:id="@+id/textViewLastUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last updated: Now"
                        android:textSize="12sp"
                        android:textColor="#8E8E93"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- Live Status Indicator -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/live_status_background"
                    android:padding="8dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/live_update_dotdot"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LIVE"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:fontFamily="sans-serif-black" />

                </LinearLayout>

            </LinearLayout>

            <!-- ETA and Capacity Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- ETA Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewETA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 min"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimated Arrival"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/textViewDistanceToStop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📍 0.5 km to bus stop"
                        android:textSize="12sp"
                        android:textColor="#8E8E93"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Capacity Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:id="@+id/textViewCapacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="78% Full"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FF9500"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginBottom="8dp" />

                    <!-- Capacity Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progressBarCapacity"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="8dp"
                        android:progress="78"
                        android:max="100"
                        android:progressDrawable="@drawable/capacity_progress_bar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bus Capacity"
                        android:textSize="12sp"
                        android:textColor="#8E8E93"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Set Reminder Button -->
                <Button
                    android:id="@+id/buttonSetReminder"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="🔔 Set Reminder"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#007AFF"
                    android:background="@drawable/btn_reminder_selector"
                    android:fontFamily="sans-serif-black"
                    android:elevation="2dp" />

                <!-- Contact Driver Button -->
                <Button
                    android:id="@+id/buttonContactDriver"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="💬 Contact Driver"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_contact_selector"
                    android:fontFamily="sans-serif-black"
                    android:elevation="4dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
