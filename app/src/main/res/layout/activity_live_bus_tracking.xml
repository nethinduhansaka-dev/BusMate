<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7">

    <!-- Header Information -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Bus Route Info -->
            <TextView
                android:id="@+id/textViewBusRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Route 245 - Colombo Express"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1C1C1E"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-black" />

            <!-- Bus Status with Progress Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewBusStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🚌 Live Tracking Active"
                    android:textSize="16sp"
                    android:textColor="#34C759"
                    android:fontFamily="sans-serif-medium" />

                <!-- Progress Bar for loading states -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"
                    android:indeterminateTint="#007BFF" />

            </LinearLayout>

            <!-- ETA and Nearby Buses Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textViewETA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ETA: 5 min"
                    android:textSize="18sp"
                    android:textColor="#FF9500"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black" />

                <!-- Nearby Buses Counter -->
                <TextView
                    android:id="@+id/textViewNearbyBuses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nearby: 0"
                    android:textSize="14sp"
                    android:textColor="#6C757D"
                    android:fontFamily="sans-serif-medium"
                    android:background="#F0F0F0"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@android:drawable/ic_menu_mylocation"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Real-time Status Indicator -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#34C759">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <!-- Live indicator dot -->
            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#FFFFFF"
                android:layout_marginEnd="6dp"
                android:alpha="0.9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIVE"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Google Map -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="80dp" />

    <!-- Floating Action Button for Location -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMyLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        android:src="@android:drawable/ic_menu_mylocation"
        app:backgroundTint="#007BFF"
        app:tint="#FFFFFF"
        app:elevation="8dp" />

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="← Back"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#6C757D"
            android:fontFamily="sans-serif-medium" />

        <Button
            android:id="@+id/buttonRefresh"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="🔄 Refresh"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="#007BFF"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>