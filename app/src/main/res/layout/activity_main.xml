<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <!-- Header Section with Enhanced App Branding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp">

            <!-- Enhanced App Logo without CardView -->
            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bus_mate_logo"
                android:gravity="center"
                android:orientation="vertical">

            </LinearLayout>

            <!-- Enhanced App Name with Custom Typography -->
            <TextView
                android:id="@+id/textViewAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BusMate"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:letterSpacing="0.02"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="6dp"
                android:elevation="1dp" />

            <!-- Enhanced Tagline with Better Spacing -->
            <TextView
                android:id="@+id/textViewTagline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Smart Bus Travel Companion"
                android:textSize="16sp"
                android:textColor="#666666"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="0.01"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

        <!-- Enhanced Welcome Message Section with Border -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FAFAFA"
            android:layout_marginBottom="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/border_section">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to the Future of Bus Travel"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/textViewWelcomeMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Experience seamless bus travel with real-time tracking, digital ticketing, and intelligent route planning at your fingertips."
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:lineSpacingExtra="6dp"
                    android:fontFamily="sans-serif-light" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


