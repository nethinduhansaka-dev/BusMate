<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF"
    android:gravity="center">

    <!-- Header Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BusMate"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart Bus Travel Assistant"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="40dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't worry! Enter your email address or phone number and we'll send you a reset link to get back into your account."
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Email/Phone Input -->
    <EditText
        android:id="@+id/editTextEmailPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter your email or phone number"
        android:inputType="textEmailAddress"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <!-- Send Reset Link Button -->
    <Button
        android:id="@+id/buttonSendResetLink"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Send Reset Link"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_primary_background"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- OR Divider -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="#666666"
        android:layout_marginBottom="16dp" />

    <!-- Contact Support -->
    <TextView
        android:id="@+id/textViewContactSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Need more help?\nContact Support"
        android:textColor="#007BFF"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/textViewDebugInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Debug info will appear here"
        android:textSize="12sp"
        android:textColor="#666666"
        android:background="#F0F0F0"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:visibility="visible" />

    <!-- Back to Sign In -->
    <TextView
        android:id="@+id/textViewBackToSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember your password? Sign In"
        android:textColor="#007BFF"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
